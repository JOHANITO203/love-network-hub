# Server Configuration
PORT=3001
NODE_ENV=development
API_PREFIX=/api/v1

# Database (PostgreSQL 16)
DATABASE_URL=postgresql://moydate_user:moydate_pass@localhost:5432/moydate_auth

# Redis Cache & Sessions
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# JWT Secrets (CHANGE IN PRODUCTION!)
JWT_ACCESS_SECRET=change-me-super-secret-access-key-production
JWT_REFRESH_SECRET=change-me-super-secret-refresh-key-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# VK OAuth (PRIORITY - Russian Market)
VK_CLIENT_ID=your-vk-app-id
VK_CLIENT_SECRET=your-vk-app-secret
VK_CALLBACK_URL=http://localhost:3001/api/v1/auth/oauth/vk/callback

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/oauth/google/callback

# Apple Sign In
APPLE_CLIENT_ID=com.moydate.app
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./certs/apple-private-key.p8

# Instagram OAuth
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# SMS Provider (SMSC.ru for Russia)
SMS_PROVIDER=smsc
SMSC_LOGIN=your-smsc-login
SMSC_PASSWORD=your-smsc-password
SMSC_SENDER=МойDate

# Rate Limiting
OTP_RATE_LIMIT_MAX=3
OTP_RATE_LIMIT_WINDOW_MINUTES=60
OTP_EXPIRY_MINUTES=5
OTP_CODE_LENGTH=6

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Russian Data Protection (152-FZ)
DATA_RESIDENCY=RU
ENABLE_AUDIT_LOGGING=true
