{
  "name": "@love-network-hub/notifications-service",
  "version": "1.0.0",
  "description": "Notifications microservice for Love Network Hub - Multi-channel notification delivery system",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testMatch='**/*.integration.test.ts'",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "migrate": "node-pg-migrate",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "docker:build": "docker build -t notifications-service .",
    "docker:run": "docker-compose up -d"
  },
  "keywords": [
    "notifications",
    "microservice",
    "push-notifications",
    "email",
    "real-time"
  ],
  "author": "Love Network Hub Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "fastify": "^4.25.2",
    "@fastify/cors": "^8.4.2",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "bull": "^4.12.0",
    "bullmq": "^5.1.5",
    "firebase-admin": "^12.0.0",
    "@sendgrid/mail": "^8.1.0",
    "handlebars": "^4.7.8",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "date-fns": "^3.0.6",
    "ioredis": "^5.3.2",
    "axios": "^1.6.5",
    "amqplib": "^0.10.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/bull": "^4.10.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@types/amqplib": "^0.10.4",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "node-pg-migrate": "^6.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
