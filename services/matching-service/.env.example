# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=love_network_matching
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Matching Algorithm Configuration
MATCHING_PAGE_SIZE=20
MATCHING_MAX_DISTANCE_KM=100
MATCHING_MIN_SCORE=50
MATCHING_CACHE_TTL=1800

# Algorithm Weights (should sum to 100)
WEIGHT_AGE=25
WEIGHT_INTERESTS=20
WEIGHT_PERSONALITY=15
WEIGHT_DISTANCE=15
WEIGHT_PROFILE_COMPLETENESS=10
WEIGHT_ACTIVITY=10
WEIGHT_ZODIAC_BONUS=5

# A/B Testing
AB_TESTING_ENABLED=true
AB_TEST_VARIANTS=default,enhanced,ml_based

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/matching-service.log

# Feature Flags
ENABLE_ZODIAC_MATCHING=true
ENABLE_ML_RECOMMENDATIONS=false
ENABLE_SUPER_LIKES=true
